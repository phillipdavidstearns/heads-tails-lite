[Unit]
Description=test mode for heads-tails
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/heads-tails/Python/testMode.py
ExecStop=/usr/bin/python3 /home/heads-tails/Python/clearRegisters.py
Restart=on-success
RestartPreventExitStatus=SIGTERM SIGKILL

[Install]
WantedBy=multi-user.target